    config.title = 'Intro to the JAMstack';
    config.description = 'A Frontend Masters Workshop';

    config.author = {
      name: 'Jason Lengstorf',
      email: 'jason@lengstorf.com',
      link: 'https://lengstorf.com/',
      twitter: 'jlengstorf',
      github: 'jlengstorf',
    };
    
    config.slides = {
      link: 'https://git.io/fem-jamstack-intro',
    };

    config.conference = {
      hashtag: '',
      twitter: '',
    };
  -

